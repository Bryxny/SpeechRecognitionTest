{
  "expo": {
    "name": "speechTest",
    "slug": "speechTest",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "This app needs access to speech recognition to convert your voice into text.",
        "NSMicrophoneUsageDescription": "This app needs access to the microphone to capture your voice."
      },
      "supportsTablet": true,
      "bundleIdentifier": "com.bryxny.speechTest"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "permissions": ["RECORD_AUDIO"]
      },
      "edgeToEdgeEnabled": true,
      "package": "com.bryxny.speechTest"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-speech-recognition"]
  }
}
